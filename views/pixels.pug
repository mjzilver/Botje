extends layout

block content
    <script src="/js/pixels.js"></script>
    <br/>
    <div class='drawboard-header'>
        <label for="color">Color: </label>
        <input type="color" id="color" name="color" value="#f6b73c">
    </div>
    table(class='drawboard')
            each pixelrow in pixels.length ? pixels : ['No Pixels']
                <tr>
                each pixel in pixelrow.length ? pixelrow : ['No Row']
                    <td class= 'pixel' id="!{pixel.x}-!{pixel.y}" style='background-color: rgb(!{pixel.red}, !{pixel.green}, !{pixel.blue}) !important;' onclick='pixelClick(!{pixel.x}, !{pixel.y})'> 
                    </td>
                </tr>
